<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 

    android:background="#BDC3C7" >
    
    
    <TextView 
        android:id="@+id/tv_cs_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="@string/customer_support_message"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="#ECF0F1"
        android:padding="5dp"
        />
    <LinearLayout 
        
      android:id="@+id/ll_child1"
        android:background="#ECF0F1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
         android:layout_below="@+id/tv_cs_msg"
          android:padding="10dp"
              android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp" 
        >
    <EditText 
        android:id="@+id/et_cs_subject"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:layout_below="@+id/tv_cs_msg"
     
       android:background="@drawable/customersupport_textfield_activated_holo_light"
       
        
        
        />

    
    </LinearLayout>
    
    
    <LinearLayout 
        
      android:id="@+id/ll_child2"
      android:layout_below="@+id/ll_child1"
        android:background="#ECF0F1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
          android:padding="10dp"
              android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp" 
        >
    
    <EditText
    android:id="@+id/et_issue_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hint="Issue Description"
   android:gravity="top"
     android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" 
          android:background="@drawable/customersupport_textfield_activated_holo_light"
/>
    
</LinearLayout>
</RelativeLayout>
